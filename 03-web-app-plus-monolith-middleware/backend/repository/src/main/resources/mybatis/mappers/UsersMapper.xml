<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.digitalcrafting.eregold.repository.users.UsersMapper">
    <resultMap id="UserEntityMap"
               type="org.digitalcrafting.eregold.repository.users.UserEntity">
        <!-- Mybatis config will map this automatically-->
    </resultMap>

    <select id="getByUserId" resultMap="UserEntityMap" parameterType="java.lang.String">
        SELECT *
        FROM users
        WHERE user_id = #{userId}
    </select>

    <insert id="insert" parameterType="org.digitalcrafting.eregold.repository.users.UserEntity">
        INSERT INTO users (user_id,
                           password_hash)
        VALUES (#{userId},
                #{passwordHash})
    </insert>
</mapper>